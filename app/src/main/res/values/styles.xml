<resources>
    <!-- Tema principal de la app, debe heredar de MaterialComponents para que MaterialButton funcione -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>

        <!-- Opcional: Status bar y navigation bar para que coincidan -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>

        <!-- Si usas Toolbar, puedes personalizar acá -->
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
    </style>

    <!-- Estilo para botones de cuenta -->
    <style name="AccountButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Estilo para botones de categoría -->
    <style name="CategoriaBoton">
        <item name="android:backgroundTint">#1F1F1F</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/boton_categoria_background</item>
    </style>
</resources>

