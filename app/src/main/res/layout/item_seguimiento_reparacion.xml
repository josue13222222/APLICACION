<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:background="@drawable/admin_header_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/pago_header_card">

        <!-- Dispositivo y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDispositivo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laptop HP"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En ReparaciÃ³n"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/admin_button_orange"
                android:padding="6dp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Problema -->
        <TextView
            android:id="@+id/tvProblema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No enciende"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Costo -->
        <TextView
            android:id="@+id/tvCosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S/. 150.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/pago_green"
            android:layout_marginBottom="8dp" />

        <!-- Observaciones -->
        <TextView
            android:id="@+id/tvObservaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Revisando fuente de poder"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actualizado: 15/12/2024 14:30"
            android:textSize="12sp"
            android:textColor="@color/pago_blue"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
