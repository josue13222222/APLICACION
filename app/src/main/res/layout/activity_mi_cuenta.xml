<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/tech_background">

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Cuenta"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"
        android:textColor="@android:color/white" />

    <!-- Botón Datos Personales -->
    <Button
        android:id="@+id/btnDatosPersonales"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="DATOS PERSONALES"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/btn_rounded"
        android:drawableEnd="@drawable/person"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Botón Notificaciones -->
    <Button
        android:id="@+id/btnNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="NOTIFICACIONES"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/btn_rounded"
        android:drawableEnd="@drawable/ic_notificacion"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Botón Mis Compras -->
    <Button
        android:id="@+id/btnMisCompras"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="MIS PEDIDOS"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/btn_rounded"
        android:drawableEnd="@drawable/ic_compra"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Botón Direcciones con mejor estilo -->
    <Button
        android:id="@+id/btnDirecciones"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="DIRECCIONES"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/btn_rounded"
        android:drawableEnd="@drawable/ic_location"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:paddingStart="16dp"
        android:layout_marginBottom="8dp" />
</LinearLayout>
