<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/tech_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Updated header styling and background -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ SOLICITUD DE SERVICIO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="32dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del cliente"
                android:padding="14dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÃºmero de contacto"
                android:padding="14dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            android:layout_marginBottom="16dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEquipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tipo de equipo"
                android:padding="14dp"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@android:color/white"
            app:hintTextColor="@android:color/white"
            android:layout_marginBottom="32dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etProblema"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:hint="DescripciÃ³n del problema"
                android:padding="14dp"
                android:gravity="top|start"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textColorHint="#CCCCCC"
                android:inputType="textMultiLine"
                android:maxLines="6" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fotos section - now makes all 4 photos mandatory -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“· FOTOS DEL EQUIPO (OBLIGATORIAS 4)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Foto 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSeleccionarFoto1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“· Foto 1"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imgFoto1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#444444"
                android:visibility="gone"
                android:contentDescription="Foto 1 del equipo" />
        </LinearLayout>

        <!-- Foto 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSeleccionarFoto2"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“· Foto 2"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imgFoto2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#444444"
                android:visibility="gone"
                android:contentDescription="Foto 2 del equipo" />
        </LinearLayout>

        <!-- Foto 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnSeleccionarFoto3"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“· Foto 3"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imgFoto3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#444444"
                android:visibility="gone"
                android:contentDescription="Foto 3 del equipo" />
        </LinearLayout>

        <!-- Foto 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <Button
                android:id="@+id/btnSeleccionarFoto4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="ðŸ“· Foto 4"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imgFoto4"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#444444"
                android:visibility="gone"
                android:contentDescription="Foto 4 del equipo" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“ REGISTRAR ORDEN"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_rounded"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
