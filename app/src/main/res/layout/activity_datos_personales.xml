<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Datos Personales"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- Card Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Completo"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ingresa tu nombre"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Card Apellido Paterno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Paterno"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etApellidoPaterno"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ingresa tu apellido paterno"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Card Apellido Materno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apellido Materno (opcional)"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etApellidoMaterno"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ingresa tu apellido materno"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Fecha de Nacimiento con DatePicker interactivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de Nacimiento ðŸŽ‚"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Toca para seleccionar"
                android:clickable="true"
                android:focusable="false"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Card DNI -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Documento de Identidad"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etDni"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ingresa tu DNI"
                android:inputType="number"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Card Celular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃºmero de Celular"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/etCelular"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Ej: 987654321"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@android:color/white"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />
        </LinearLayout>

        <!-- BotÃ³n Guardar mejorado -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ’¾ GUARDAR CAMBIOS"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_rounded"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
