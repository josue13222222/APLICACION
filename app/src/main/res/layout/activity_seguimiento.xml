<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/fondo">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1A73E8"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”§ ROBOT AL RESCATE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seguimiento de tu reparaciÃ³n"
            android:textSize="14sp"
            android:textColor="#E8F0FE"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Contenedor de bÃºsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F8F9FA">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa el nÃºmero de tu orden:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etNumeroOrden"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Ej: OR-2024001"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:layout_marginBottom="12dp"
            android:textSize="16sp"
            android:inputType="text" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ” BUSCAR ESTADO"
            android:layout_marginBottom="16dp"
            android:background="#1A73E8"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Nuevo contenedor mejorado para mostrar el estado -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:id="@+id/containerEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Card del estado principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Estado visual con indicador de progreso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Reemplazar impresora por logo de empresa (robot.png) -->
                    <ImageView
                        android:id="@+id/ivEstadoIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/robot"
                        android:contentDescription="Estado de la orden"
                        android:layout_marginRight="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado de la orden:"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvEstadoActual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendiente"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A73E8"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPorcentajeProgreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:paddingRight="12dp" />
                </LinearLayout>

                <!-- Barra de progreso visual -->
                <ProgressBar
                    android:id="@+id/pbEstado"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="16dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="30"
                    android:progressDrawable="@android:drawable/progress_horizontal" />

                <!-- InformaciÃ³n de cliente -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ INFORMACIÃ“N DEL CLIENTE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#1A73E8"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvNombreCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre: No especificado"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvTelefonoCliente"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TelÃ©fono: No disponible"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- InformaciÃ³n del equipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’» EQUIPO A REPARAR"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#1A73E8"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvEquipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipo: No especificado"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvProblema"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Problema: No especificado"
                        android:textSize="14sp"
                        android:textColor="#333333" />
                </LinearLayout>

                <!-- Etapas de reparaciÃ³n - SOLO 2 ETAPAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:background="#F5F5F5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ ESTADO DEL SERVICIO"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#1A73E8"
                        android:layout_marginBottom="12dp" />

                    <!-- Etapa 1: En ReparaciÃ³n - Logo actualizado a robot -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/ivEtapa1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/robot"
                            android:layout_marginRight="12dp"
                            android:contentDescription="En ReparaciÃ³n"
                            android:scaleType="centerInside" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="En ReparaciÃ³n"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#FF6F00" />

                            <TextView
                                android:id="@+id/tvEtapa1Fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha: Pendiente"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEtapa1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â—‹"
                            android:textSize="24sp"
                            android:textColor="#CCCCCC"
                            android:paddingRight="8dp" />
                    </LinearLayout>

                    <!-- Etapa 2: Listo para Recoger - Logo actualizado a robot -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivEtapa2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/robot"
                            android:layout_marginRight="12dp"
                            android:contentDescription="Listo para Recoger"
                            android:scaleType="centerInside" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Listo para Recoger"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#4CAF50" />

                            <TextView
                                android:id="@+id/tvEtapa2Fecha"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fecha: Pendiente"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvEtapa2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â—‹"
                            android:textSize="24sp"
                            android:textColor="#CCCCCC"
                            android:paddingRight="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- BotÃ³n de contacto -->
            <Button
                android:id="@+id/btnContactoSoporte"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="ðŸ“ž CONTACTAR SOPORTE"
                android:background="#FF9800"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
