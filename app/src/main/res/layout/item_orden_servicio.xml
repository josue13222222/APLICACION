<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tvEquipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipo"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvProblema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Problema"
            android:textSize="14sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TelÃ©fono"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="2dp"/>


        <TextView
            android:id="@+id/tvEstadoActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/imgFoto1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="#EEE"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/imgFoto2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="#EEE"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnEnReparacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ”§ En reparaciÃ³n"
                android:backgroundTint="#2196F3"
                android:layout_marginEnd="4dp"/>

            <Button
                android:id="@+id/btnListoRecoger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ… Listo para recoger"
                android:backgroundTint="#4CAF50"
                android:layout_marginHorizontal="4dp"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ—‘ï¸ Eliminar"
                android:backgroundTint="#F44336"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
