<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuración del Sistema"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Información de la App -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📱 INFORMACIÓN DE LA APP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etNombreApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la aplicación"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etVersionApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Versión de la aplicación"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Información de Soporte -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📞 INFORMACIÓN DE SOPORTE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etEmailSoporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email de soporte"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/etTelefonoSoporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono de soporte"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="phone" />

        <!-- Configuraciones del Sistema -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ CONFIGURACIONES DEL SISTEMA"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modo Mantenimiento"
                android:textSize="16sp"
                android:textColor="#333" />

            <Switch
                android:id="@+id/switchMantenimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Permitir Registro de Usuarios"
                android:textSize="16sp"
                android:textColor="#333" />

            <Switch
                android:id="@+id/switchRegistroUsuarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <EditText
            android:id="@+id/etMensajeMantenimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mensaje de mantenimiento"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"
            android:inputType="textMultiLine"
            android:lines="3" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnGuardarConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💾 Guardar"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnRestablecerConfig"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔄 Restablecer"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
