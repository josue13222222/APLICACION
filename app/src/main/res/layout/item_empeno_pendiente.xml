<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtProductoEmpeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/txtValorEmpeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor: S/ 0"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/txtPuntosEmpeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntos: 0"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtEstadoEmpeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Nuevo"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txtFechaEmpeno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 2025-01-01"
            android:textSize="12sp"
            android:textColor="#666"/>

        <!-- Fotos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/imgFoto1Empeno"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:layout_marginEnd="8dp"
                android:background="#EEE"/>

            <ImageView
                android:id="@+id/imgFoto2Empeno"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="#EEE"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnAprobarEmpeno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✅ Aprobar"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnRechazarEmpeno"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="❌ Rechazar"
                android:backgroundTint="#F44336"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
