<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    Header actualizado
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Empeños - Aprobación"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    Estadísticas
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtTotalEmpenos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/txtEmpenosPendientes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pendientes: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#FFF3E0"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:id="@+id/txtEmpenosAprobados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Aprobados: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#C8E6C9"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    Título de empeños pendientes
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empeños Pendientes de Aprobación"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:layout_marginBottom="12dp" />

    Lista de empeños pendientes con fotos
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerEmpenosPendientes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp" />

</LinearLayout>
