<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tech_background">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUESTRAS UBICACIONES"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingVertical="16dp"
        android:layout_margin="16dp" />

    <!-- Información de la tienda con mejor estilo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:background="@drawable/btn_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sr. Robot - Servicio Técnico"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicio técnico y venta de laptops y computadoras"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: 975167294 / 923389988"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="16dp">

        <Button
            android:id="@+id/btnAbrirMapa"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="ABRIR MAPA"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_rounded"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnLlamarTienda"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:text="LLAMAR"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_rounded"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
