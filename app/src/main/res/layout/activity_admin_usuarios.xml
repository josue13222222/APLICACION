<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Usuarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Estadísticas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtTotalUsuarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/txtUsuariosActivos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activos: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#C8E6C9"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginHorizontal="4dp" />

        <TextView
            android:id="@+id/txtUsuariosBloqueados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bloqueados: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#FFCDD2"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="4dp" />

    </LinearLayout>

    <!-- Búsqueda -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etBuscarUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar por email..."
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnBuscarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnBloquearUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bloquear"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:enabled="false" />

        <Button
            android:id="@+id/btnDesbloquearUsuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Desbloquear"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <!-- Lista de usuarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp" />

</LinearLayout>
