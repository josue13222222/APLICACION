<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Cupones - Puntos de Usuarios"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtTotalUsuarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Usuarios: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txtPuntosTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Puntos Totales: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#C8E6C9"
            android:padding="12dp"
            android:gravity="center"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Agregar buscador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etBuscarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar por nombre, email o teléfono..."
            android:background="@drawable/edittext_background"
            android:padding="12dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuarios y sus Puntos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="12dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUsuariosPuntos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp" />

</LinearLayout>
