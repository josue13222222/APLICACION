<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de Cupones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Estadísticas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtTotalCupones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#E3F2FD"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/txtCuponesActivos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Activos: 0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#C8E6C9"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Formulario crear cupón -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear Nuevo Cupón"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/etCodigoCupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código del cupón (ej: DESCUENTO20)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:inputType="textCapCharacters" />

    <EditText
        android:id="@+id/etDescuentoPorcentaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Porcentaje de descuento (1-100)"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="8dp"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/etDescripcionCupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del cupón"
        android:background="@drawable/edittext_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:inputType="textMultiLine"
        android:lines="2" />

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnCrearCupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Crear Cupón"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnEliminarCupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

    <!-- Lista de cupones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cupones Existentes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCupones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp" />

</LinearLayout>
