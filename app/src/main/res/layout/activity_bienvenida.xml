<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tech_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Texto de bienvenida -->
        <TextView
            android:id="@+id/textoBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隆Bienvenido, Josue!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="6dp" />

        <!-- Texto de puntos -->
        <TextView
            android:id="@+id/textoPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tienes 0 puntos de cupones"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp" />

        <!-- Logo de la empresa -->
        <ImageView
            android:id="@+id/logoEmpresa"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/robot"
            android:contentDescription="Logo Empresa"
            android:layout_marginBottom="20dp" />

        <!-- Contenedor de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Fila 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnMicuenta"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="MI CUENTA"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_home"
                    android:drawablePadding="8dp"
                    android:background="@drawable/btn_rounded"
                    android:layout_marginEnd="2dp" />

                <Button
                    android:id="@+id/btnEmpenos"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:drawableEnd="@drawable/ic_cupon"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="EMPEOS"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- Fila 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btnMas"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="ROBOT IA"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_mas"
                    android:drawablePadding="8dp"
                    android:background="@drawable/btn_rounded"
                    android:layout_marginEnd="2dp" />

                <Button
                    android:id="@+id/btnCupones"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="MI CUPON"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:drawableEnd="@drawable/ic_tienda"
                    android:drawablePadding="8dp"
                    android:background="@drawable/btn_rounded"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bot贸n Robot al Rescate -->
        <Button
            android:id="@+id/btnRobotRescate"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="ROBOT AL RESCATE"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded"
            android:layout_marginTop="20dp" />

        <!-- Agregando bot贸n de pagos para usuarios -->
        <Button
            android:id="@+id/btnPagos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text=" REALIZAR PAGO"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/pago_button_background"
            android:layout_marginTop="12dp"
            android:elevation="6dp" />

        <!-- Agregar bot贸n direcciones -->
        <Button
            android:id="@+id/btnDirecciones"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="DIRECCIONES"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded"
            android:layout_marginTop="12dp" />

        <!-- Texto redes sociales -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puedes encontrarnos en:"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/logoFacebook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook"
                android:contentDescription="Logo de Facebook"
                android:layout_marginHorizontal="12dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <!-- Logo Instagram -->
            <ImageView
                android:id="@+id/logoInstagram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/instagrann"
                android:contentDescription="Instagram"
                android:layout_marginHorizontal="12dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true" />

            <!-- Logo TikTok -->
            <ImageView
                android:id="@+id/logoTiktok"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/tiktokk"
                android:contentDescription="TikTok"
                android:layout_marginHorizontal="12dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true" />

        </LinearLayout>

        <!-- Bot贸n cerrar sesi贸n -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="CERRAR SESIN"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:background="@drawable/btn_rounded"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</ScrollView>
